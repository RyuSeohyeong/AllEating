	<insert id="insertNewOwnerInquiry" parameterType="java.util.Map">
	<![CDATA[
			INSERT into inquiry_board(
									   articleNO, 
									   title, 
									   content,  
									   board_status,
									   writeDate)
								VALUES(
									   #{articleNO}, 
									   #{title}, 
									   #{content}, 
									   #{board_status}, 
									   now())			
	]]>
</insert>

	<select id="selectNewArticleNO" resultType="int">
		SELECT ifnull(max(articleNO), 0)+1 from inquiry_board
	</select>

	<select id="selectAllArticlesList" resultMap="ownerInquiryResult">
<![CDATA[
		select * from inquiry_board order by articleNO desc
]]>	</select>
	
	
</mapper>